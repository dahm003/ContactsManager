<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/personShadeForAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.90"
        android:padding="40dp"
        android:cropToPadding="true"
        android:src="@drawable/blank_photo"
        android:contentDescription="shade of person"   />

    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2.15"
        android:background="#FF000000"
        android:cropToPadding="true"
        android:padding="100dp" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <EditText
            android:id="@+id/FirstNameForAdd"
            android:layout_width="0px"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:inputType="text"
        	android:hint="First name"  />
        
        <EditText
            android:id="@+id/LastNameForAdd"
            android:layout_width="0px"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:inputType="text"
        	android:hint="Last name"  />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
         <EditText
            android:id="@+id/MobileNumberForAdd"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:inputType="phone"
        	android:hint="Mobile"  />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
         <EditText
            android:id="@+id/WorkNumberForAdd"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:inputType="phone"
        	android:hint="Work number"  />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
         <EditText
            android:id="@+id/emailForAdd"
            android:layout_width="0px"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:inputType="text"
        	android:hint="Email address"  />
         
         <EditText
            android:id="@+id/homeAddressForAdd"
            android:layout_width="0px"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:inputType="text"
        	android:hint="Home address"  />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
         <EditText
            android:id="@+id/DOBForAdd"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:inputType="date"
        	android:hint="Date of Birth"  />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
             
         <Button
            android:id="@+id/deleteWholeContactFromAdd"
            android:layout_width="0px"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text="trash"   />
              
         <Button
            android:id="@+id/saveDataFromAdd"
            android:layout_width="0px"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text="save"   />
        
    </LinearLayout>
        
        

</LinearLayout>
